/dts-v1/;

#include <dt-bindings/interrupt-controller/irq.h>
#include "imx6dl.dtsi"
#include "imx6qdl-g2h.dtsi"

/ {
	model = "Reach Tech i.MX6 Solo G2H Board";
	compatible = "reach,imx6dl-g2h", "fsl,imx6dl";

	/*
	 * Panel: 7" VGA
	 * Touch: Evervision
	 * Display Interface: Parallel
	 */

	mxcfb1: fb@0 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "lcd";
		interface_pix_fmt = "RGB666";
		mode_str ="WVGA-GH2";
		default_bpp = <32>;
		int_clk = <0>;
		late_init = <0>;
		status = "okay";
	};

       lcd@0 {
		compatible = "fsl,lcd";
		ipu_id = <0>;
		disp_id = <0>;
		default_ifmt = "RGB666";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_ipu1>;
		lcd-enable-gpio = <&gpio2 11 0>;
		backlight-enable-gpio = <&gpio2 8 0>;
		status = "okay";
	};

    sound {
		status = "okay";
	};
};

&i2c1 {
	codec: sgtl5000@0a {
		status = "okay";
	};
};

&ssi1 {
	status = "okay";
};

&epdc {
	status = "disabled";
};

&evervision {
	status = "okay";
};

&flexcan1 {
	status = "okay";
};

&spiflash {
	status = "okay";
};

&uart4 {
	rts-gpios = <&gpio6 2 1>;
};
