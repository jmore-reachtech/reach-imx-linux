/dts-v1/;

#include <dt-bindings/interrupt-controller/irq.h>
#include "imx6dl.dtsi"
#include "imx6dl-g2h.dtsi"

/ {
    /*
     * Panel: 10.1" WXGA
     * Touch: evervision 
     * Display Interface: LDB
     * LDB Clock: PLL2
     */
	model = "G2H i.MX6 Solo Dual Lite Board";
	compatible = "reach,imx6sdl-hawthorne", "fsl,imx6dl";

    aliases {
		mxcfb0 = &mxcfb1;
	};
   
    mxcfb1: fb@0 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "ldb";
		interface_pix_fmt = "RGB24";
		mode_str ="LDB-WXGA";
		default_bpp = <32>;
		int_clk = <0>;
		late_init = <0>;
		status = "okay";
    };

    sound: sound@0 {
        status = "okay";
    };

};

&dipswitch {
    status = "okay";
};

&ldb {
	ipu_id = <0>;
	disp_id = <0>;
	ext_ref = <1>;
	mode = "sin0";
	sec_ipu_id = <0>;
	sec_disp_id = <0>;
	backlight_en_gpio = <&gpio2 8 0>;
	disp_en_gpio = <&gpio2 11 0>;
    channel_mapping = "SPWG";
	status = "okay";
};


&epdc {
	status = "disabled";
};

&evervision {
    status = "okay";
};

&spiflash {
	status = "okay";
};

&flexcan1 {
	status = "okay";
};

&uart4 {
	rts-gpios = <&gpio6 2 1>;
};

&i2c1 {
    codec: sgtl5000@0a {
        status = "okay";
    };
};

